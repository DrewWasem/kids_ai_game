# ============================================================
# Application Configuration
# ============================================================
# Copy this file to .env and fill in your values.
# All MYAPP_* prefixed variables can be overridden via environment.

# --- Database Configuration ---
MYAPP_DB_HOST=localhost
MYAPP_DB_PORT=5432
MYAPP_DB_NAME=myapp
MYAPP_DB_USER=myapp
MYAPP_DB_PASSWORD=your_password_here

# Connection pooling
MYAPP_DB_POOL_MIN=1
MYAPP_DB_POOL_MAX=20
MYAPP_DB_CONNECT_TIMEOUT=10

# Slow query threshold (milliseconds)
MYAPP_SLOW_QUERY_THRESHOLD_MS=500

# --- Security Configuration ---
# REQUIRED: Set a strong secret key for JWT tokens (min 32 characters)
MYAPP_SECRET_KEY=your-secret-key-at-least-32-characters-long-please-change-this

# JWT token expiration (minutes)
MYAPP_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Bcrypt work factor (higher = more secure, slower)
MYAPP_BCRYPT_ROUNDS=12

# --- Service URLs ---
MYAPP_API_URL=http://localhost:8001
MYAPP_FRONTEND_URL=http://localhost:5173

# CORS Origins (comma-separated)
MYAPP_CORS_ORIGINS=http://localhost:5173,http://localhost:8000,http://127.0.0.1:5173

# --- Logging Configuration ---
MYAPP_LOG_DIR=./logs
MYAPP_LOG_LEVEL=INFO
MYAPP_LOG_FORMAT=text
MYAPP_STRUCTURED_LOGGING=true

# --- Rate Limiting Configuration ---
MYAPP_RATE_LIMIT_ENABLED=true
MYAPP_RATE_LIMIT_DEFAULT=100/minute
MYAPP_RATE_LIMIT_REDIS_URL=

# --- API Pagination ---
MYAPP_API_DEFAULT_PAGE_SIZE=50
MYAPP_API_MAX_PAGE_SIZE=500

# --- Worker Configuration ---
MYAPP_WORKER_IDLE_INTERVAL=30
MYAPP_WORKER_MAX_RETRIES=5
MYAPP_WORKER_HEARTBEAT_MAX_AGE=300

# --- Backoff Configuration ---
MYAPP_BACKOFF_MIN_DELAY=1.0
MYAPP_BACKOFF_MAX_DELAY=60.0
MYAPP_BACKOFF_MULTIPLIER=2.0

# --- Notification Configuration (Webhook) ---
MYAPP_NOTIFICATION_WEBHOOK_URL=
MYAPP_NOTIFICATION_WEBHOOK_TYPE=slack

# --- Notification Configuration (Email/SMTP) ---
MYAPP_NOTIFICATION_SMTP_HOST=
MYAPP_NOTIFICATION_SMTP_PORT=587
MYAPP_NOTIFICATION_SMTP_USER=
MYAPP_NOTIFICATION_SMTP_PASSWORD=
MYAPP_NOTIFICATION_EMAIL_FROM=
MYAPP_NOTIFICATION_EMAIL_TO=

# --- Notification Thresholds ---
MYAPP_NOTIFICATION_BATCH_THRESHOLD=10
MYAPP_NOTIFICATION_ESCALATION_DAYS=7

# --- Auth Middleware ---
MYAPP_AUTH_MIDDLEWARE_ENABLED=true

# --- Health Monitoring ---
MYAPP_HEALTH_CHECK_INTERVAL=60
MYAPP_HEALTH_ALERT_COOLDOWN=300
