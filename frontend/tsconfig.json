{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },
  "include": ["src"],
  "exclude": [
    "src/**/__tests__/**",
    "src/game/scenes/MonsterPartyScene.ts",
    "src/game/scenes/RobotPizzaScene.ts",
    "src/game/scenes/WizardKitchenScene.ts",
    "src/game/scenes/DinosaurSchoolScene.ts",
    "src/game/scenes/DogSpaceScene.ts",
    "src/game/scenes/OctopusBandScene.ts",
    "src/game/SceneScriptPlayer.ts",
    "src/game/SoundManager.ts",
    "src/game/AssetLoader.ts",
    "src/game/EventBus.ts",
    "src/game/PhaserGame.tsx",
    "src/test-scale.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
